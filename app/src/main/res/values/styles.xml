<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Input_field_label_style" parent="android:Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/inputfield_label_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="toolbar_layout_style" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="home_page_welcome_text" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance" tools:targetApi="lollipop">
            @android:style/TextAppearance.Material.Title
        </item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left|center</item>
    </style>


    <style name="main_header_text" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/layout_marginEnd</item>
        <item name="android:layout_marginLeft">@dimen/layout_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/layout_marginRight</item>
        <item name="android:layout_marginTop">@dimen/toolbar_title_marginTop</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance" tools:targetApi="lollipop">
            @android:style/TextAppearance.Material.Title
        </item>
    </style>

    <style name="home_layout_style" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>

    </style>


    <style name="myTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Scanner_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">#fff</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="begining_heading_layout_style" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/heading_background</item>

    </style>


    <style name="form_heading_style" parent="android:Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/form_heading_font_size</item>
        <item name="android:layout_marginLeft">@dimen/form_heading_margin_left</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/form_heading_label_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">@dimen/input_field_padding</item>

    </style>

    <style name="form_page_style" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/form_page_margin_left</item>
        <item name="android:layout_marginRight">@dimen/form_page_margin_right</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Input_layout_style" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/input_label_margin_top</item>
    </style>

    <style name="Input_field_style" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/inputfield_background</item>
        <item name="android:padding">@dimen/input_field_padding</item>
        <item name="counterTextAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/inputfield_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:maxLength">30</item>
        <item name="android:digits">0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        </item>

    </style>

    <style name="button_style" parent="android:Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="alert_dialogue_button_style" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/alert_dialogue_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_success_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/alert_dialogue_button_text_size</item>
        <item name="android:textStyle">bold</item>


    </style>


    <style name="radio_button_style" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/inputfield_color</item>
    </style>

    <style name="radio_button_label_style" parent="android:Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/input_label_margin_bottom</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/inputfield_label_color</item>
        <item name="android:textSize">@dimen/label_field_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
